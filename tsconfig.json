{
  "include": [
    "./*.d.ts",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "strict": false,
    "module": "esnext",
    "lib": [
      "dom",
      "esnext",
      "dom.iterable",
      "es2019"
    ],
    "downlevelIteration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": [
      "chrome",
      "jest",
      "node"
    ],
    "noImplicitAny": false,
    "baseUrl": "src",
    "paths": {
      "@stylebot/*": [
        "*/index"
      ]
    }
  }
}