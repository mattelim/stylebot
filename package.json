{
  "name": "stylebot",
  "version": "3.1.3",
  "description": "Change the appearance of the web instantly",
  "homepage": "https://github.com/ankit/stylebot#readme",
  "bugs": {
    "url": "https://github.com/ankit/stylebot/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ankit/stylebot.git"
  },
  "license": "MIT",
  "author": "Ankit Ahuja",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "build:firefox": "cross-env NODE_ENV=production BROWSER=firefox webpack",
    "watch": "cross-env NODE_ENV=development webpack --watch",
    "watch:firefox": "cross-env NODE_ENV=development BROWSER=firefox webpack --watch",
    "start:firefox": "web-ext run --source-dir ./firefox-dist/",
    "lint": "eslint --ext .js,.ts,.vue src",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "setupFiles": [
      "./setupJest.js"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@stylebot/(.*)$": "<rootDir>/src/$1/index",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,vue}": [
      "yarn lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/plugin-proposal-optional-chaining": "^7.18.9",
    "@babel/preset-env": "^7.20.2",
    "@mozilla/readability": "^0.4.2",
    "@types/chrome": "^0.0.203",
    "@types/dedent": "^0.7.0",
    "@types/jest": "^29.2.3",
    "@types/lodash": "^4.14.190",
    "@types/tinycolor2": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^1.3.3",
    "autoprefixer": "^10.4.13",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^29.3.1",
    "bootstrap": "^4.6.2",
    "bootstrap-vue": "^2.23.1",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "crx-hotreload": "^1.0.6",
    "css-loader": "^6.7.2",
    "cssnano": "^5.1.14",
    "date-fns": "^2.29.3",
    "deepmerge": "^4.2.2",
    "ejs": "^3.1.8",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.8.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "hotkeys-js": "^3.10.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-cli": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.7.0",
    "monaco-editor": "^0.34.1",
    "patch-package": "^6.5.0",
    "postcss": "^8.4.19",
    "postcss-loader": "^7.0.1",
    "postcss-rem-to-pixel": "^4.1.2",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.8.0",
    "prettier-eslint": "^15.0.1",
    "progress-bar-webpack-plugin": "^2.1.0",
    "requirejs": "^2.3.6",
    "sass": "^1.56.1",
    "sass-loader": "^13.2.0",
    "terser-webpack-plugin": "^5.3.6",
    "tinycolor2": "^1.4.2",
    "ts-dedent": "^2.2.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "vue": "^2.7.14",
    "vue-draggable-resizable": "^2.3.0",
